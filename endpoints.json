{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object by its id",
    "exampleResponse": {
      "article": {
        "author": "jessjelly",
        "title": "Running a Node App",
        "article_id": 1,
        "body": "Text from the article",
        "topic": "coding",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 100,
        "article_img_url": "https://articles.com/article-image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2020-07-10T20:11:00.000Z",
          "author": "jessjelly",
          "body": "Great article!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to an article",
    "requestBody": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "author": "oneday",
        "body": "My new comment.",
        "article_id": 1,
        "created_at": "2021-01-01T12:00:00.000Z",
        "votes": 0
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes of an article by its id",
    "exampleRequest": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 101
      }
    }
  }
}
